    <persistence-unit name="relations-scenario1" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>br.edu.ifpb.ads.dac.activity.relations.scenario1.Cliente</class>
        <class>br.edu.ifpb.ads.dac.activity.relations.scenario1.Conta</class>
        <class>br.edu.ifpb.ads.dac.activity.relations.scenario1.Entrada</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/relations-scenario1"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.password" value="12345"/>
        </properties>
    </persistence-unit>
</persistence>
